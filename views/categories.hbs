<div class="row">
    <div class="col-md-12">
        <h2>Posts
        <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        </h2>
        <hr />

        <table class="table">
            <thead>
                <tr>                   
                    <th>ID</th>
                    <th>Category</th>                
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                    <tr>           
                        <td><a href="/posts?category={{id}}">{{id}}</a></td>
                        <td><a href="/posts?category={{id}}">{{category}}</a></td>
                        <td><a class="btn btn-danger"href="categories/delete/{{id}}">remove</a></td>   
            </tr>
          {{else}}
            <tr>
              <td colspan="8"></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
  {{#unless categories}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>

