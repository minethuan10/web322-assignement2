<div class="row">
    <div class="col-md-12">

        <h2>Log in</h2>

        <br>
        {{#if errorMessage}}
            <div class="alert alert-danger"> <strong>Error:</strong> {{errorMessage}}</div>
        {{/if}}
        <form method="POST" action="/login">
            <fieldset>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input class="form-control" placeholder="User Name" required="ture" name="userName"
                                type="text" value="{{#if userName}}{{userName}}{{/if}}">
                        </div>

                        <div class="form-group">
                            <input class="form-control" placeholder="Password" required="ture" name="password"
                                type="password" value="">
                        </div>
                    </div>
                </div>
            </fieldset>

            <hr>

            <input type="submit" class="btn btn-primary pull-right" value="Login"><br><br><br>

        </form>
    </div>
</div>